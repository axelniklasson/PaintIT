{
  "manifest_version": 2,
  "name": "PaintIT",
  "version": "1.0",
  "description": "Provides quick and easy access to a color picker to style elements in a web page suitable for web developers.",

  "browser_action": {
    "default_icon": "content/img/icon128.png",
    "default_popup": "content/index.html"
  },
  "icons": {
    "128": "content/img/icon128.png"
  },
  "permissions": ["tabs", "activeTab", "<all_urls>"],
  "web_accessible_resources": ["getElements.js"]
}